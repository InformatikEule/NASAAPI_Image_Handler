<Page x:Class="NASAAPI_Image_Handler.pgFridge"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NASAAPI_Image_Handler"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgFridge">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBlock Text="Your Frozen Meals" Margin="10,0,0,0" Foreground="{StaticResource color3}" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBlock Text="" Margin="10,0,0,0" Foreground="{StaticResource color3}" VerticalAlignment="Center"/>
        </StackPanel>


        <!-- Linke Seite: Eingabe -->
        <StackPanel Grid.Column="0" Grid.Row="3" Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Gib alle erforderlichen Parameter an und " Foreground="{StaticResource color3}"/>
            <TextBlock Text="ich sage dir wie viel du wovon hast und " Foreground="{StaticResource color3}"/>
            <TextBlock Text="wie lange das haltbar ist." Foreground="{StaticResource color3}"/>

            <TextBlock Text="Name:" Foreground="{StaticResource color3}" Margin="0,10,0,0"/>
            <TextBox x:Name="txtName" />

            <TextBlock Text="Menge:" Foreground="{StaticResource color3}"/>
            <TextBox x:Name="txtMenge" />

            <TextBlock Text="Datum:" Foreground="{StaticResource color3}"/>
            <DatePicker x:Name="datPicked" />

            <TextBlock Text="Art:" Foreground="{StaticResource color3}"/>
            <ComboBox x:Name="comBoxArt" Width="150" Foreground="{StaticResource color3}">
                <ComboBoxItem Content="Rind" />
                <ComboBoxItem Content="Schwein" />
                <ComboBoxItem Content="Hackfleisch" />
                <ComboBoxItem Content="Huhn" />
                <ComboBoxItem Content="Hühnersuppe" />                
                <ComboBoxItem Content="Lamm" />
                <ComboBoxItem Content="Wild" />
                <ComboBoxItem Content="Veggie *Würg" />
            </ComboBox>

            <Button Content="Hinzufügen" Foreground="{StaticResource color3}" Background="{StaticResource panelOverColor}" Width="100" Click="btnHinzufügen_Click" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Rechte Seite: Ausgabe -->
        <ListView x:Name="AusgabeListe" Grid.Row="2" Grid.Column="1" Margin="10" Background="{StaticResource panelOverColor}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150" />
                    <GridViewColumn Header="Menge" DisplayMemberBinding="{Binding Name}" Width="150" />
                    <GridViewColumn Header="Datum" DisplayMemberBinding="{Binding Datum}" Width="100" />
                    <GridViewColumn Header="Art" DisplayMemberBinding="{Binding Fleischart}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
