<Page x:Class="NASAAPI_Image_Handler.pgFridge"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NASAAPI_Image_Handler"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgFridge">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBlock Text="Your Frozen Meals" Margin="10,0,0,0" Foreground="{StaticResource color3}" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBlock Text="Was möchtest du einfrieren? Ich benötige einen Namen, die Fleischsorte sowie eine Menge und das Einfrierdatum:" Margin="10,0,0,0" Foreground="{StaticResource color3}" VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Data View: -->
        <StackPanel Grid.Row="2" Margin="10">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <Label x:Name="lblName" Foreground="White" Content="Name:"/>
                <TextBox></TextBox>
                <Label x:Name="lblFleisch" Foreground="White" Content="Fleischsorte:"/>
                <TextBox></TextBox>
                <Label x:Name="lblDatum" Foreground="White" Content="Einfrierdatum:"/>
                <DatePicker></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                <TextBlock Foreground="White" Text="1231234234"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
