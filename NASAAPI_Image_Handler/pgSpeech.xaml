<Page x:Class="NASAAPI_Image_Handler.pgSpeech"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NASAAPI_Image_Handler"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgSpeech">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            <TextBlock x:Name="textBlockInput" Grid.Row="0" Foreground="White" TextWrapping="Wrap" Text="Type something and click the Button below!" Margin="0,0,0,10"/>

            <TextBox x:Name="InputTextBox" Grid.Row="1" Height="30" FontSize="16"
                 Text="" Margin="0,0,0,10"/>

            <TextBlock x:Name="textBlockDateTime" Grid.Row="2" Foreground="White" TextWrapping="Wrap" Text="Type something and click the Button below!" Margin="0,0,0,10"/>

            <Button Content="Talk 2 Me" Grid.Row="3" Height="30" Click="BtnSpeak_Click" Margin="0,0,0,10"/>

            <TextBox x:Name="DateTextBox" Grid.Row="4" Height="30" FontSize="16"
                 Text="DateTime 2 Speech" Margin="0,0,0,10"/>

            <Button Content="Date/Time" Grid.Row="5" Height="30" Click="BtnDate_Time_Click" Margin="0,0,0,10"/> 
    </Grid>
</Page>
